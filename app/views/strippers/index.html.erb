<div class="container">
  <div class="row">
    <% @strippers.each do |stripper| %>
      <%= link_to stripper_path(stripper) do %>
        <div class="col-xs-12 col-sm-4">
          <div id="parent" class="card" style="background-image: linear-gradient(345deg, rgba(12, 51, 93, 0.77) 0%, rgba(0,36,61,0.2) 62%), url( '<%= cl_image_path(stripper.pics1, gravity: :face) %>');">
            <div id="popup" class="card-description"><h2><span><%= stripper.description.split("*")[0] %></h2></span><p></p> </div>
            <div class="card-category">
             <h4><span><%= stripper.name %></span></h4>
            </div>
            <div class="card-footer">
              <h4 class=“details-inner”>
                 <% empty_star = 5 - stripper.review %>
                 <% stripper.review.times do %>
                   <i class="fas fa-star" style="color:#ff2f515c;"></i>
                 <% end %>
                 <% empty_star.times do %>
                   <i class="far fa-star"></i>
                 <% end %>
               </h4>
              <div class="stripper-price">
                <p>
                  €<%= stripper.price %>/h
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%end%>
  </div>
</div>
