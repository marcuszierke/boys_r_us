<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( '<%= image_path "TuanStripper.jpg" %>');">
  <div class="banner-content">
    <h1>Boys R Us</h1>
    <p>Because you deserve it</p>
  </div>
</div>
<div class="container">
  <div class="row">
      <h2><%  @strippers.each do |stripper| %></h2>
      <a  href=<%= stripper_path(stripper) %>>
      <div class="col-xs-12 col-sm-4">
        <div id="parent" class="card" style="background-image: linear-gradient(345deg, rgba(12, 51, 93, 0.77) 0%, rgba(0,36,61,0.2) 62%), url( '<%= image_path "stripper-old" %>');">
          <div id="popup" class="card-description"><h2><%= stripper.description%></h2> <p></p> </div>
          <div class="card-category">
           <h4><%= stripper.name %></h3>
          </div>
          <div class="card-footer">
            <h4 class=“details-inner”>
               <% empty_star = 5 - stripper.rating %>
               <% stripper.rating.times do %>
                 <i class="fas fa-star" style="color:yellow;"></i>
               <% end %>
               <% empty_star.times do %>
                 <i class="far fa-star"></i>
               <% end %>
             </h4>
            <div class="stripper-price">
              <p>
                €<%= stripper.price %>/h
              </p>
            </div>
          </div>
        </div>
      </div>
      <%end%>
      </a>
  </div>
</div>
